# Use official Python slim image for minimal size
FROM python:3.13-slim

# Set working directory
WORKDIR /app

# Install system dependencies (add if your AI needs them)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy your Python source code
COPY . .

# Expose port for API calls (adjust as needed)
EXPOSE 8000

# Run the app (adjust command if using Flask, FastAPI, etc.)
CMD ["python", "app.py"]
